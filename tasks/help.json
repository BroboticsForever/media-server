[
  {
    "available_tasks": {
      "description": "List all available grunt tasks",
      "arguments": {
        "sorted": "Default = true. Set to false if you want an unsorted list."
      },
      "examples": [
        "grunt available_tasks",
        "grunt available_tasks:true",
        "grunt available_tasks:false"
      ]
    }
  },
  {
    "create_help": {
      "description": "Creates a help entry for the specified grunt task.",
      "arguments": {
        "task": "The grunt task you wish to create a help entry for."
      },
      "examples": [
        "grunt create_help:my_task",
        "grunt create_help:default",
        "grunt create_help:jshint"
      ]
    }
  },
  {
    "default": {
      "description": "Alias for 'jshint', 'nodeunit', and 'run' tasks.",
      "examples": [
        "\"grunt default\""
      ]
    }
  },
  {
    "help": {
      "description": "View the help entry for the specified grunt task.",
      "arguments": {
        "task": "The grunt task you wish to view the help entry of."
      },
      "examples": [
        "grunt help:help",
        "grunt help:available_tasks",
        "grunt help:jshint"
      ]
    }
  },
  {
    "jshint": {
      "description": "Validate files with JSHint.",
      "examples": [
        "\"grunt jshint\""
      ]
    }
  },
  {
    "nodeunit": {
      "description": "Run unit tests in 'tests' directory with NodeUnit.",
      "examples": [
        "\"grunt nodeunit\""
      ]
    }
  },
  {
    "run": {
      "description": "Run the server.",
      "arguments": {},
      "examples": [
        "grunt run"
      ]
    }
  },
  {
    "delete_help": {
      "description": "Delete the help entry for the specified grunt task.",
      "arguments": {
        "task": "The grunt task you wish to delete the help entry of."
      },
      "examples": [
        "grunt delete_help:available_tasks",
        "grunt delete_help:my_custom_task"
      ]
    }
  }
]
